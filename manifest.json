{
    "manifest_version": 2,
    "name": "hash-checker",
    "version": "1.0",
    "description": "Make webapp a app",
    "icons": {
        "96": "icon.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "storage",
        "notifications",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "assets/icons/wa-96.png",
        "default_title": "Hash-Hacker",
        "default_popup": "popups/index.html"
    },
    "background": {
        "scripts": [
            "popups/browser-polyfill.js",
            "background/sha256.js",
            "background/main.js"
        ]
    }
}